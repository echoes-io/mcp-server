{
  "name": "@echoes-io/mcp-server",
  "type": "module",
  "version": "2.2.0",
  "description": "Model Context Protocol server for AI integration with Echoes storytelling platform",
  "scripts": {
    "dev": "tsx cli/index.ts",
    "start": "node cli/index.js",
    "lint": "concurrently npm:lint:* --prefixColors auto",
    "lint:format": "biome check --write",
    "lint:lockfile": "lockfile-lint --path package-lock.json",
    "lint:engines": "ls-engines",
    "lint:publish": "publint --strict",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "check": "npm run clean && npm run test:coverage && npm run build && npm run lint && npm run clean",
    "prepare": "[ \"$CI\" = \"true\" ] || [ \"$GITHUB_ACTIONS\" = \"true\" ] && echo 'Skipping husky' && exit 0 || husky",
    "clean": "rimraf --glob ./{cli,lib,test}/**/*.{d.ts,js} ./vitest*.{d.ts,js}",
    "prebuild": "npm run clean",
    "build": "tsc",
    "release": "semantic-release"
  },
  "bin": {
    "echoes-mcp-server": "./cli/index.js"
  },
  "exports": {
    ".": "./lib/server.js"
  },
  "files": [
    "cli/**/*.{d.ts,js}",
    "lib/**/*.{d.ts,js}"
  ],
  "engines": {
    "node": ">= 20.3"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/echoes-io/mcp-server.git"
  },
  "keywords": [
    "echoes",
    "storytelling",
    "multi-pov"
  ],
  "author": "Zweer <n.olivieriachille@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/echoes-io/mcp-server/issues"
  },
  "homepage": "https://github.com/echoes-io/mcp-server#readme",
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@tsconfig/node22": "^22.0.5",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.15",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "lockfile-lint": "^4.14.1",
    "ls-engines": "^0.9.3",
    "publint": "^0.3.15",
    "rimraf": "^6.1.2",
    "semantic-release": "^25.0.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@echoes-io/books-generator": "^1.1.0",
    "@echoes-io/models": "^1.1.0",
    "@echoes-io/rag": "^1.4.0",
    "@echoes-io/tracker": "^1.1.0",
    "@echoes-io/utils": "^1.3.1",
    "@modelcontextprotocol/sdk": "^1.24.2"
  }
}
